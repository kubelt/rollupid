{
  "name": "@proofzero/platform.core",
  "version": "0.0.0",
  "main": "src/index.ts",
  "private": true,
  "scripts": {
    "build": "wrangler publish --dry-run --outdir=dist",
    "check": "run-s format:check lint:check types:check",
    "format": "run-s format:src",
    "format:src": "prettier --write src",
    "format:check": "run-s format:check:src",
    "format:check:src": "prettier --check src",
    "lint": "eslint --fix src test",
    "lint:check": "run-s lint:check:src",
    "lint:check:src": "eslint src",
    "types:check": "tsc --project tsconfig.json",
    "db:execute": "wrangler d1 migrations apply edges-v2 --local",
    "dev": "env-cmd --file .dev.env wrangler dev",
    "deploy": "wrangler publish",
    "test": "run-s check"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "4.20230518.0",
    "@types/node": "20.3.1",
    "@typescript-eslint/eslint-plugin": "5.59.11",
    "@typescript-eslint/parser": "5.59.11",
    "env-cmd": "10.1.0",
    "eslint": "8.43.0",
    "eslint-config-prettier": "8.8.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.8",
    "typescript": "5.1.3",
    "wrangler": "3.2.0"
  },
  "dependencies": {
    "@proofzero/platform.account": "workspace:*",
    "@proofzero/platform.authorization": "workspace:*",
    "@proofzero/platform.billing": "workspace:*",
    "@proofzero/platform.edges": "workspace:*",
    "@proofzero/platform.identity": "workspace:*",
    "@proofzero/platform.starbase": "workspace:*",
    "@proofzero/types": "workspace:*",
    "@proofzero/urns": "workspace:*",
    "@trpc/server": "10.8.1",
    "do-proxy": "1.3.4",
    "jose": "4.14.4",
    "postal-mime": "1.0.16",
    "zod": "3.22.4"
  }
}
