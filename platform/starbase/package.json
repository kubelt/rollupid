{
  "name": "@kubelt/platform.starbase",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "node build.js",
    "deploy": "wrangler publish",
    "deploy:dev": "wrangler publish --env dev",
    "dev:local": "run-s types:check build wrangler:local",
    "dev:remote": "run-s types:check build wrangler:remote",
    "format": "run-s format:src",
    "format:src": "prettier --write src/",
    "format:test": "prettier --write test/",
    "format:check": "run-s format:check:*",
    "format:check:src": "prettier --check src/",
    "format:check:test": "prettier --check test/",
    "lint": "eslint --fix src",
    "lint:check": "run-s lint:check:*",
    "lint:check:src": "eslint src",
    "types:check": "tsc --project tsconfig.json --noEmit",
    "wrangler:local": "wrangler dev --env dev --local --persist",
    "wrangler:remote": "wrangler dev --env dev"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "3.18.0",
    "@types/itty-router-extras": "0.4.0",
    "@types/lodash": "4.14.187",
    "esbuild": "0.15.12",
    "eslint-plugin-tsdoc": "0.2.17",
    "npm-run-all": "4.1.5",
    "typescript": "4.8.4",
    "wrangler": "2.1.15"
  },
  "dependencies": {
    "@kubelt/do.starbase-application": "workspace:*",
    "@kubelt/do.starbase-contract": "workspace:*",
    "@kubelt/do.starbase-user": "workspace:*",
    "@kubelt/openrpc": "workspace:*",
    "cross-env": "7.0.3",
    "lodash": "4.17.21",
    "multiformats": "10.0.2"
  }
}
