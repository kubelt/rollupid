{
  "compilerOptions": {
    "lib": ["es2019", "DOM", "ES6", "DOM.Iterable"],
    "target": "es2015",
    "module": "es2020",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "outDir": "dist",
    "declarationDir": "dist/types"
  },
  "exclude": ["dist", "package.json"],
  "include": ["src/**/*", "src/**/*.json"]
}
