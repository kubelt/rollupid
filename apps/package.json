{
  "name": "@kubelt/apps",
  "version": "0.1.0",
  "private": true,
  "useWorkspaces": true,
  "workspaces": [
    "*"
  ],
  "scripts": {
    "gql:apps": "graphql-codegen --config graphql.config.js --project apps --aggregate-output -n -l",
    "gql": "run-p 'gql:*'",
    "dev:gql": "run-p 'gql:* -- --watch'",
    "storybook": "yarn workspaces foreach -i -v -p -t run storybook",
    "start": "yarn workspaces foreach -i -v -p -t -j unlimited run start",
    "build": "yarn workspaces foreach -p -v -i -t run build",
    "test": "yarn workspaces foreach -p -v -i -t run test"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.13.7",
    "@graphql-codegen/client-preset": "1.1.1",
    "@graphql-codegen/typescript-graphql-request": "4.5.7",
    "@graphql-codegen/typescript-resolvers": "2.7.5",
    "@playwright/test": "^1.27.1",
    "graphql": "16.6.0",
    "npm-run-all": "4.1.5",
    "typescript": "4.8.4"
  },
  "packageManager": "yarn@3.2.4"
}
